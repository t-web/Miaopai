<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
     <item name="android:windowNoTitle">true</item>
     <item name="android:windowFullscreen">true</item>
    </style>
    
    <!-- 分享界面的字体参数 -->
    <style name="share_title_top">
        <item name="android:textColor">@color/text_title</item>
        <item name="android:textSize">@dimen/share_title</item>
        
      
    </style>
    
     <style name="share_app">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/share_appname</item>
    </style>
    
     <style name="share_title">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/share_title</item>
    </style>
    
       <!-- 收起来的app小图标样式-->
      <style name="share_smallapp">
        <item name="android:layout_marginTop">@dimen/margin_top_smallicon</item>
        <item name="android:layout_marginRight">@dimen/margin_right_smallicon_between</item>
    </style>
</resources>
