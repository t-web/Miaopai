<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/img_preview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#44ff0000" />

    <ImageView
        android:id="@+id/btn_retake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="@dimen/retake_margin_left"
        android:layout_marginTop="@dimen/retake_margin_top"
        android:src="@drawable/rephotograph" />

    <ImageView
        android:id="@+id/btn_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/share_margin_right"
        android:layout_marginTop="@dimen/share_margin_top"
        android:src="@drawable/share"
        />

    <ImageView
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginRight="@dimen/save_margin_right"
        android:layout_marginTop="@dimen/save_margin_top"
        android:layout_toLeftOf="@id/btn_share"
        android:src="@drawable/download" />

</RelativeLayout>